# PromptBuilder Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== API Keys =====

# The Odds API (Free tier: 500 requests/month)
# Sign up at: https://the-odds-api.com/
ODDS_API_KEY=your_odds_api_key_here

# ESPN API (if using)
ESPN_API_KEY=your_espn_api_key_here

# RapidAPI Sports Data (optional)
RAPID_API_KEY=your_rapidapi_key_here

# ===== GitHub Integration =====

# GitHub Personal Access Token
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# GitHub Username
GITHUB_USERNAME=tregula501

# GitHub Repository Name
GITHUB_REPO=PromptBuilder

# ===== Application Settings =====

# Default maximum combined odds
DEFAULT_MAX_ODDS=400

# Auto-save prompts to GitHub (true/false)
AUTO_SAVE_TO_GITHUB=false

# Auto-commit after generating prompt (true/false)
AUTO_COMMIT=false

# ===== Data Source Settings =====

# Enable API data fetching (true/false)
ENABLE_API_FETCH=true

# Enable web scraping (true/false)
ENABLE_WEB_SCRAPING=false

# Scraping delay in seconds (to avoid rate limiting)
SCRAPING_DELAY=2

# ===== Advanced Settings =====

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Max API retries
MAX_RETRIES=3

# Cache duration in minutes
CACHE_DURATION=15

# ===== Sportsbook URLs (for web scraping) =====

# Add your preferred sportsbook URLs here
# DRAFTKINGS_URL=https://sportsbook.draftkings.com/
# FANDUEL_URL=https://sportsbook.fanduel.com/
# BET365_URL=https://www.bet365.com/
